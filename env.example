# Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tradepro_payments
DB_USER=postgres
DB_PASSWORD=your_password
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/tradepro_payments

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_key
JWT_REFRESH_EXPIRE=30d

# Email Configuration (Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@tradepro.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret_key

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
SESSION_SECRET=your_session_secret_key

# App Configuration
APP_NAME=TradePro
APP_URL=http://localhost:3000
API_URL=http://localhost:5000/api
SUPPORT_EMAIL=support@tradepro.com
ADMIN_EMAIL=admin@tradepro.com

# KYC Configuration
KYC_REQUIRED=true
KYC_VERIFICATION_TIME=24

# Transaction Limits
MIN_TRANSACTION_AMOUNT=1
MAX_TRANSACTION_AMOUNT=100000
DAILY_TRANSACTION_LIMIT=50000
MONTHLY_TRANSACTION_LIMIT=500000

# Forex API Configuration
FOREX_API_KEY=your_forex_api_key
FOREX_API_URL=https://api.exchangerate-api.com/v4/latest/

# Notification Configuration
PUSH_NOTIFICATIONS=true
EMAIL_NOTIFICATIONS=true
SMS_NOTIFICATIONS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# SSL Configuration (for production)
SSL_KEY_PATH=
SSL_CERT_PATH=
